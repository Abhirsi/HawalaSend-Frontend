# ========================
# MONEY TRANSFER APP CONFIG
# ========================

# >>> CORE API SETTINGS <<<
REACT_APP_API_URL=http://localhost:3001
# Change to HTTPS in production
REACT_APP_API_TIMEOUT=10000  
# 10 seconds
REACT_APP_VERSION=1.0.0
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_XXXX # Uncomment when ready

# >>> PAYMENT GATEWAYS <<<
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXX  
# Test mode only
# REACT_APP_PAYPAL_CLIENT_ID=XXXXXXXXXXXXXXXXX  
# Uncomment if using PayPal

# >>> TRANSACTION LIMITS <<<
REACT_APP_MAX_TRANSFER_AMOUNT=10000.00  
# $10,000
REACT_APP_MIN_TRANSFER_AMOUNT=1.00
REACT_APP_DAILY_TRANSFER_LIMIT=50000.00

# >>> MONITORING & ANALYTICS <<<
REACT_APP_SENTRY_DSN=https://XXXXXXX@sentry.io/XXXXX
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX  
# Google Analytics 4
REACT_APP_HOTJAR_ID=XXXXXX

# >>> AUTHENTICATION <<<
REACT_APP_AUTH0_DOMAIN=your-app.auth0.com  
# If using Auth0
REACT_APP_AUTH0_CLIENT_ID=XXXXXXXXXXXXXXXX
REACT_APP_JWT_REFRESH_INTERVAL=540000  
# 9 minutes (before 1h expiry)

# >>> SECURITY HEADERS <<<
REACT_APP_CSP_DIRECTIVES="default-src 'self'; connect-src 'self' https://api.stripe.com; script-src 'self' 'unsafe-inline' https://js.stripe.com"

# >>> ENVIRONMENT CONTROL <<<
REACT_APP_ENV=development  
# Change to "production" when deploying
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=$(date +'%Y-%m-%d_%H-%M-%S')  
# Auto-generated

# >>> FEATURE FLAGS <<<
REACT_APP_FEATURE_INTERNATIONAL_TRANSFERS=false
REACT_APP_FEATURE_CRYPTO_PAYMENTS=false
REACT_APP_FEATURE_RECURRING_PAYMENTS=false

# >>> UI CONFIGURATION <<<
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_MAINTENANCE_MODE=false
REACT_APP_SHOW_DEV_TOOLS=true  
# Disable in production

# >>> THIRD-PARTY INTEGRATIONS <<<
REACT_APP_MAPBOX_TOKEN=pk.XXXXXXXXXXXXXXXXXXX
REACT_APP_TWILIO_SANDBOX_ID=XXXXXXXXXXXXXXXX